{
  "name": "mini-bot",
  "version": "3.0.0",
  "description": "Mini Bot is a music bot that features playlists. Users can create playlists through this bot and can be saved and played at any time.",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node -r dotenv/config . --saveMp3 --saveSongCache",
    "start:prod": "npm run build && node -r dotenv/config . -p --saveMp3 --saveSongCache",
    "clean": "rm -rf dist/"
  },
  "author": "JB Ladera (https://github.com/minidomo)",
  "license": "ISC",
  "dependencies": {
    "@types/ws": "^6.0.4",
    "axios": "^0.19.2",
    "bufferutil": "^4.0.1",
    "discord.js": "^12.3.1",
    "dotenv": "^8.2.0",
    "libsodium-wrappers": "^0.7.8",
    "moment": "^2.29.4",
    "opusscript": "0.0.6",
    "winston": "^3.3.3",
    "youtube-search": "^1.1.4",
    "yt-search": "^0.4.5",
    "ytdl-core": "^0.29.7",
    "ytdl-core-discord": "^1.2.2"
  },
  "devDependencies": {
    "typescript": "^3.9.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MiniDomo/Mini-Bot.git"
  },
  "bugs": {
    "url": "https://github.com/MiniDomo/Mini-Bot/issues"
  },
  "homepage": "https://github.com/MiniDomo/Mini-Bot#readme"
}
